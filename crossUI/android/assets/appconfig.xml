<app package="$<PACKAGE_NAME>">
    <mainscreen name = "$<SCREEN_NAME>" />
    <colors>
        <color name="MAIN"                  value="333333"/>
        <color name="BACK"                  value="f3f3f3"/>
        <color name="TEXT_NAVBAR"           value="ffffff"/>
        <color name="ELEMENT_BACK"          value="ffffff"/>
        <color name="ELEMENT_BORDER"        value="e7e7e7"/>
    </colors>

    <fonts>
        <font name="navbar"             path="SF-UI-Display-Medium.ttf"     size="18" color="ffffff"/>
        <font name="label"              path="SF-UI-Display-Regular.ttf"    size="14" color="666666"/>
        <font name="h1"                 path="SF-UI-Display-Regular.ttf"    size="16" color="000000"/>
        <font name="h1-bold"            path="SF-UI-Display-Bold.ttf"       size="16" color="000000"/>
        <font name="text"               path="SF-UI-Text-Regular.ttf"       size="14" color="666666"/>
        <font name="text_field"         path="SF-UI-Display-Light.ttf"      size="16" color="000000"/>
    </fonts>
</app>